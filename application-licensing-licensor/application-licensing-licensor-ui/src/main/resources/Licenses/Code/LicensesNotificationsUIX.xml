  <content>{{velocity output="false"}}
#set ($licensorId = 'com.xwiki.licensing:application-licensing-licensor-api')
#macro (getPaidExtensions)
  #set ($paidExtensionsByNamespace = $services.extension.installed.getBackwardDependencies($licensorId))
  #set ($paidExtensions = $collectiontool.set)
  #foreach ($paidExtensionsOnNamespace in $paidExtensionsByNamespace.values())
    #set ($discard = $paidExtensions.addAll($paidExtensionsOnNamespace))
  #end
#end
#macro (getVisiblePaidExtensions)
  #getPaidExtensions
  #set ($mandatoryExtensions = $services.licensing.licensor.getLicensedExtensionManager().getMandatoryLicensedExtensions())
  #set ($visiblePaidExtensions = $collectiontool.set)
  #foreach ($paidExtension in $paidExtensions)
    #if ($mandatoryExtensions.contains($paidExtension.getId()))
      #set ($discard = $visiblePaidExtensions.add($paidExtension))
    #end
  #end
#end
#macro(renderNotification $btnClass $notificationClass $translation $extensionNames $showMore)
  &lt;$licensesNotificationWrapperTagName class="licenses-notification $notificationClass"&gt;
    &lt;p&gt;$escapetool.xml($services.localization.render($translation))&lt;/p&gt;
    &lt;ul&gt;
      &lt;li&gt;$stringtool.join($extensionNames, '&lt;/li&gt;&lt;li&gt;')&lt;/li&gt;
      #if ($showMore)
        &lt;li&gt;...&lt;/li&gt;
      #end
    &lt;/ul&gt;
    &lt;/br&gt;
    &lt;button class="btn btn-$btnClass" onclick="location.href='#getLicensesAdminSectionURL'"&gt;
      $escapetool.xml($services.localization.render("${translation}.${btnClass}"))&lt;/button&gt;
  &lt;/$licensesNotificationWrapperTagName&gt;
#end
{{/velocity}}

{{velocity}}
#if ($services.licensing.licensor.isMemberOfNotifiedGroups() || $hasAdmin)
  #getVisiblePaidExtensions
  ## The same extension could be installed on multiple namespaces (wikis) with different versions.
  #set ($invalidExtensionNames = $collectiontool.sortedSet)
  #set ($expiringExtensionNames = $collectiontool.sortedSet)
  #set ($limit = 3)
  #set ($showMoreInvalid = false)
  #set ($showMoreExpiring = false)
  #set ($foundExpiring = false)
  #set ($foundInvalid = false)
  #foreach ($extension in $visiblePaidExtensions)
    #if (!$showMoreInvalid &amp;&amp; !$services.licensing.licensor.hasLicensureForExtension($extension.id))
      #set ($foundInvalid = true)
      #if ($invalidExtensionNames.size() &lt; $limit)
        #set ($discard = $invalidExtensionNames.add($escapetool.xml($extension.name)))
      #else
        #set ($showMoreInvalid = true)
      #end
    #elseif (!$showMoreExpiring &amp;&amp; $services.licensing.licensor.isLicenseExpiring($extension.id))
      #set ($foundExpiring = true)
      #if ($expiringExtensionNames.size() &lt; $limit)
        #set ($discard = $expiringExtensionNames.add($escapetool.xml($extension.name)))
      #else
        #set ($showMoreExpiring = true)
      #end
    #end
    #if ($showMoreExpiring &amp;&amp; $showMoreInvalid)
      #break
    #end
  #end
  #if ($foundInvalid || $foundExpiring)
    #set ($discard = $xwiki.ssx.use('Licenses.Code.LicensesNotificationsUIX'))
    #if (!$licensesNotificationWrapperTagName)
      #set ($licensesNotificationWrapperTagName = 'div')
    #end
    {{html clean=false}}
    #if ($foundInvalid)
      #renderNotification('danger' 'errormessage' 'licensor.missingLicenses' $invalidExtensionNames $showMoreInvalid)
    #end
    #if ($foundExpiring)
      #if ($foundInvalid)
        &lt;li class="divider" role="separator"&gt;&lt;/li&gt;
      #end
      #renderNotification('warning' 'warningmessage' 'licensor.expiringLicenses' $expiringExtensionNames
        $showMoreExpiring)
    #end
    {{/html}}
  #end
#end
{{/velocity}}</content>
