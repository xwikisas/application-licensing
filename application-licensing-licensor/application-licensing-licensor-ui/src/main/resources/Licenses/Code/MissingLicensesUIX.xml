      <content>{{velocity}}
## The bell icon from the top bar is provided by NotificationsMenuUIX in XWiki &lt;9.10RC1
## and by AlertsMenuUIX in XWiki 9.10RC1+.
#if (!$xwiki.exists('XWiki.Notifications.Code.NotificationsMenuUIX') &amp;&amp;
    !$xwiki.exists('XWiki.Alerts.Code.AlertsMenuUIX'))
  {{include reference="Licenses.Code.LicensesNotificationsUIX" /}}
#end

#set ($unlicensedSheets = $services.licensing.licensor.getUnlicensedSheets($doc.documentReference, $xcontext.action))
#if ($services.sheet.getSheets($doc, $xcontext.action).isEmpty() &amp;&amp; $unlicensedSheets.size() &gt; 0)
  #set ($extensions = $collectionstool.set)
  #foreach ($sheet in $unlicensedSheets)
    #foreach ($extension in $services.extension.xar.getInstalledExtensions($sheet))
      #set ($discard = $extensions.add($extension.name))
    #end
  #end
  {{html clean="false"}}
  ## Create a div that will display a warning and the applications that don't have a license.
  ## Because the "After container header" UIX (org.xwiki.platform.template.content.header.after) is available since
  ## XWiki 10.4RC1 and we need to support XWiki 8.4+, the created div will be made hidden and moved with JS.
  &lt;div class="box errormessage hidden" id="licenseCheckingExtensionPoint"&gt;
    $escapetool.xml($services.localization.render('licensor.wrongDisplayedContent',
      [$stringtool.join($extensions, ', ')]))
  &lt;/div&gt;
  {{/html}}
  #set($discard = $xwiki.jsx.use('Licenses.Code.MissingLicensesUIX'))
#end
{{/velocity}}</content>
